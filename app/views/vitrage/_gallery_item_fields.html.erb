<div style="margin-top: 12px; border-top: 1px solid #000; padding: 10px;">
  <%= f.input :image, hint: (f.object.image? ? image_tag(f.object.image.thumb.url) : nil) %>
  <%= f.input :alt %>
  <%= f.input :caption, input_html: { rows: 1 } %>
  <%= f.input :_destroy, as: :boolean %>
  <%= f.input :image_cache, as: :hidden %>
</div>
